@model WebApplication2.Models.Track

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Track</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TrackID" />
            <div class="form-group">
                <label asp-for="Length" class="control-label"></label>
                <input asp-for="Length" class="form-control" />
                <span asp-validation-for="Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsSong" class="control-label"></label>
                <input asp-for="IsSong" class="form-control" />
                <span asp-validation-for="IsSong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GuestID" class="control-label"></label>
                <select asp-for="GuestID" class="form-control" id="GuestID"></select>
                <button type="button" class="btn btn-secondary" id="loadGuests">Add Guest</button>
            </div>
            <div class="form-group">
                <label asp-for="SecondGuestID" class="control-label"></label>
                <select asp-for="SecondGuestID" class="form-control" id="SecondGuestID"></select>
                <button type="button" class="btn btn-secondary" id="loadSecondGuests">Add Guest</button>
            </div>
            <div class="form-group">
                <label asp-for="LanguageCode" class="control-label"></label>
                <select asp-for="LanguageCode" class="form-control" id="LanguageCode"></select>
                <button type="button" class="btn btn-secondary" id="loadLanguages">Choose Language</button>
            </div>
            <div class="form-group">
                <label asp-for="ScaleID" class="control-label"></label>
                <select asp-for="ScaleID" class="form-control" id="ScaleID"></select>
                <button type="button" class="btn btn-secondary" id="loadScales">Choose Scale</button>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#loadGuests').click(function (e) {
            e.preventDefault();
            $.get('@Url.Action("LoadGuests")', function (data) {
                $('#GuestID').empty().append(data);
            });
        });

        $('#loadSecondGuests').click(function (e) {
            e.preventDefault();
            $.get('@Url.Action("LoadGuests")', function (data) {
                $('#SecondGuestID').empty().append(data);
            });
        });

        $('#loadLanguages').click(function (e) {
            e.preventDefault();
            $.get('@Url.Action("LoadLanguages")', function (data) {
                $('#LanguageCode').empty().append(data);
            });
        });

        $('#loadScales').click(function (e) {
            e.preventDefault();
            $.get('@Url.Action("LoadScales")', function (data) {
                $('#ScaleID').empty().append(data);
            });
        });
    });
</script>