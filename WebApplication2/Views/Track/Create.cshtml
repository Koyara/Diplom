@model WebApplication2.Models.ViewModels.TrackViewModel

@{
    ViewData["Title"] = "Create Track";
}

<h1>Create Track</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Length" class="control-label"></label>
                <input asp-for="Length" type="time" step="1" class="form-control" />
                <span asp-validation-for="Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReleaseID" class="control-label"></label>
                <select asp-for="ReleaseID" class="form-control" asp-items="@(new SelectList(Model.AvailableReleases, "ReleaseID", "Title"))">
                    <option value="">-- Select Release (Optional) --</option>
                </select>
                <span asp-validation-for="ReleaseID" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 