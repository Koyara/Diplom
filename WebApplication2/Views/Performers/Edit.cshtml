@model WebApplication2.Models.Performer

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Performer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PerformerID" />
            <div class="form-group">
                <label asp-for="PerformerTypeID" class="control-label"></label>
                <select asp-for="PerformerTypeID" class="form-control" asp-items="ViewBag.PerformerTypes">
                    <option value="">-- Select Performer Type --</option>
                </select>
                <span asp-validation-for="PerformerTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="6" style="min-height:120px;"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MainGenreID" class="control-label"></label>
                <select asp-for="MainGenreID" class="form-control" asp-items="ViewBag.Genres">
                    <option value="">-- Select Main Genre --</option>
                </select>
                <span asp-validation-for="MainGenreID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecondaryGenreID" class="control-label"></label>
                <select asp-for="SecondaryGenreID" class="form-control" asp-items="ViewBag.Genres">
                    <option value="">-- Select Secondary Genre --</option>
                </select>
                <span asp-validation-for="SecondaryGenreID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountryCode" class="control-label"></label>
                <select asp-for="CountryCode" class="form-control" asp-items="ViewBag.Countries">
                    <option value="">-- Select Country --</option>
                </select>
                <span asp-validation-for="CountryCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                @if (Model.Photo != null)
                {
                    <div class="mb-3">
                        <h5>Current Photo</h5>
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Photo)" 
                             alt="Current Performer Photo" 
                             class="img-thumbnail" 
                             style="max-width: 200px; max-height: 200px;" />
                    </div>
                }
                <a asp-action="UploadPhoto" asp-route-id="@Model.PerformerID" class="btn btn-info">
                    <i class="fas fa-image"></i> Manage Photo
                </a>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
