@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container">
    <h1>Admin Dashboard</h1>
    
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">User Management</h5>
                </div>
                <div class="card-body">
                    <a asp-action="RegisterEditor" class="btn btn-primary">Register New Editor</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Editor Functions</h5>
                </div>
                <div class="card-body">
                    <a asp-controller="Editor" asp-action="Index" class="btn btn-secondary">Go to Editor Dashboard</a>
                </div>
            </div>
        </div>
    </div>
</div> 